# ------------------------------------------------------------------------------
# SERVICE SETTINGS
# ------------------------------------------------------------------------------
# Service identification for distributed tracing and logging
SERVICE_NAME=microservice                # Unique name for this service instance

# ------------------------------------------------------------------------------
# APPLICATION SETTINGS
# ------------------------------------------------------------------------------
NODE_ENV=development                     # Options: development, production, test
PORT=3000                                # Port on which the service will run
API_PREFIX=api                           # Prefix for all API routes

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION (OPTIONAL)
# ------------------------------------------------------------------------------
# Not all microservices need their own database
# Set DATABASE_ENABLED=true if this service requires persistence
DATABASE_ENABLED=false                   # Enable/disable database connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/nest_microservice?schema=public

# ------------------------------------------------------------------------------
# REDIS CONFIGURATION (REQUIRED FOR MESSAGING)
# ------------------------------------------------------------------------------
# Redis is used for pub/sub messaging between services
REDIS_HOST=localhost                     # Host where Redis is running
REDIS_PORT=6381                          # Port for Redis server (different from monolith)
REDIS_PASSWORD=                          # Leave empty for no password
REDIS_KEY_PREFIX=micro:                  # Prefix for all keys to avoid collisions

# ------------------------------------------------------------------------------
# FEATURE FLAGS
# ------------------------------------------------------------------------------
# Toggle features without redeploying
ENABLE_MESSAGING=false                   # Enable Redis Streams pub/sub
ENABLE_CACHE=false                       # Enable Redis caching

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
LOG_LEVEL=info                           # Options: debug, info, warn, error
ENABLE_CONSOLE_LOGS=true                 # Enable console output

# ------------------------------------------------------------------------------
# METRICS
# ------------------------------------------------------------------------------
METRICS_ENABLED=true                     # Enable Prometheus metrics at /metrics
